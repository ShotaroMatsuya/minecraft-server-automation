FROM --platform=linux/x86_64 itzg/minecraft-server@sha256:c411b939cebf644159e2a239c713407d2bb12b8aee53c7662ce801c5c7386b7f

ENV TZ=Asia/Tokyo

WORKDIR /data

# install aws cli and cleanup
RUN apt-get update && apt-get install -y \
    ca-certificates \
    curl \
    unzip \
    tini \
    vim \
    && curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip" \
    && unzip awscliv2.zip \
    && ./aws/install -i /usr/local/aws-cli -b /usr/bin \
    && rm -rf awscliv2.zip \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* /data/aws

COPY --chown=1000:1000 ./plugins.txt ./
COPY --chown=1000:1000 ./squaremap/*.yml plugins/squaremap/
COPY --chown=1000:1000 ./scripts /scripts
RUN chmod -R 755 /scripts

# ベースイメージのSIGTERMの挙動をオーバーライドし、自前のスクリプトを実行する
ENTRYPOINT ["/usr/bin/tini", "--"]
CMD ["/scripts/entrypoint-local.sh"]