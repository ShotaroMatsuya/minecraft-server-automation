{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": ["no-apply"],
  "docker": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "enabled": true,
      "matchDatasources": [
        "docker"
      ],
      "pinDigests": true
    },
    {
      "matchPackageNames": ["aws"],
      "matchManagers": ["terraform"],
      "prPriority": -2
    },
    {
      "matchPackageNames": ["hashicorp/terraform"],
      "separateMinorPatch": true,
      "prPriority": -1
    },
    {
      "matchFileNames": [
        ".github/workflows/**"
      ],
      "prPriority": 2
    }
  ]
}
